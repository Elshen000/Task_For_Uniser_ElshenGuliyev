@model List<Product>
<div class="col-lg-12 grid-margin stretch-card  ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Məhsullar</h4>
            <a asp-action="Create" class="btn btn-primary" style="margin:20px;">Yarat</a>

            <div class="col-lg-12 " id="myProducts">
                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th>
                                Şəkillər
                            </th>
                            <th>
                                Ad
                            </th>

                            <th>
                                Kateqoriya
                            </th>
                            <th>
                                Qiymət
                            </th>

                            <th>
                                Parametrlər
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Product item in Model)
                        {


                            <tr>
                                <td>
                                    @if (item.ProductImages.FirstOrDefault().Image != null)
                                    {
                                        <img style="width:150px;height:150px;" src="~/img/@item.ProductImages.FirstOrDefault().Image" />
                                    }
                                    else
                                    {
                                        <span>No Image</span>
                                    }
                                   


                                </td>
                                <td>
                                    @item.Name
                                </td>

                                <td>

                                    @item.Category.Name
                                </td>
                                <td>

                                    @item.ProductDetail.Price AZN
                                </td>

                                <td>
                                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger rounded-pill">Sil</a>
                                    <a asp-controller="Products" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success rounded-pill">Dəyiş</a>
                                    <a asp-controller="Products" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning rounded-pill">Haqqında</a>


                                </td>
                            </tr>

                        }


                    </tbody>
                </table>

            </div>
           
        </div>
        <div class="col-12">
            <div class="card ">
                <nav aria-label="..." class="d-flex justify-content-center">
                    <ul class="pagination pagination-lg">
                        @for (int i = 1; i <= ViewBag.Pagecount; i++)
                        {
                            if (ViewBag.CurrentPage == i)
                            {
                                <li class="page-item active disabled">
                                    <a class="page-link" style="color:black" asp-route-page="@i" tabindex="-1">@i</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item ">
                                    <a class="page-link" asp-route-page="@i" tabindex="-1">@i</a>
                                </li>
                            }

                        }


                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>